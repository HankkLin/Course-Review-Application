<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<AnchorPane fx:id="anchorPane"
            prefHeight="600.0"
            prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.virginia.sde.reviews.LoginController"
            style="-fx-background-color: #ccb8af;">
    <children>

        <Label fx:id="titleLabel" layoutX="400.0" layoutY="75" text = "STUDENT LOGIN" style=" -fx-text-fill: #446c0c; -fx-font-family: 'Broadway'; -fx-font-size: 45px;"/>
        <ImageView fx:id="imageView" layoutX="375.0" layoutY="225.0"/>
        <TextField fx:id="usernameField"
                   layoutX="400.0"
                   layoutY="285.0"
                   promptText ="USERNAME"
                   style="-fx-prompt-text-fill: #446c0c; -fx-border-color: #446c0c; -fx-alignment: center-left; -fx-font-family: 'OCR A Extended'; -fx-border-width: 2.5px;"/>
        <PasswordField fx:id="passwordField"
                       layoutX="400.0"
                       layoutY="330.0"
                       prefHeight = "40.0"
                       promptText="PASSWORD"
                       style="-fx-prompt-text-fill: #446c0c; -fx-border-color: #446c0c; -fx-alignment: center-left; -fx-font-family: 'OCR A Extended'; -fx-border-width: 2.5px;"/>
        <Button fx:id="loginButton"
                layoutX="400.0"
                layoutY="375.0"
                prefWidth="200.0"
                mnemonicParsing="false"
                onAction="#loginButtonClicked"
                text="LOGIN"
                style="-fx-background-color: #446c0c; -fx-text-fill: #ccb8af; -fx-font-family: 'OCR A Extended';" />
        <Button fx:id="registerButton"
                layoutX="400.0"
                layoutY="420.0"
                prefWidth="200.0"
                mnemonicParsing="false"
                onAction="#registerButtonClicked"
                text="REGISTER"
                style="-fx-background-color: #372d22; -fx-text-fill: #ccb8af; -fx-font-family: 'OCR A Extended';" />
        <Label fx:id="statusLabel" layoutX="350.0" layoutY="465.0" style=" -fx-text-fill: #e55c22; -fx-font-family: 'OCR A Extended'; -fx-font-size: 15px;"/>
        <Button fx:id="closeButton"
                layoutX="400.0"
                layoutY="555.0"
                prefWidth="200.0"
                mnemonicParsing="false"
                onAction="#closeFunction"
                text="CLOSE"
                style="-fx-background-color: #e55c22; -fx-text-fill: #ccb8af; -fx-font-family: 'OCR A Extended';" />
    </children>

</AnchorPane>
